<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain"
    tools:context=".ProfileActivity">

  <ImageView
      android:layout_width="192dp"
      android:layout_height="153dp"
      android:layout_alignStart="@+id/textView"
      android:layout_alignEnd="@+id/textView"
      android:layout_gravity="center_horizontal"
      android:layout_marginStart="-50dp"
      android:layout_marginTop="100dp"
      android:layout_marginEnd="-48dp"
      android:src="@drawable/profile" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="500dp"
      android:background="@drawable/logomain"
      android:backgroundTint="@color/MainText"
      android:gravity="center_vertical"
      android:orientation="vertical"
      tools:layout_editor_absoluteX="32dp"
      tools:layout_editor_absoluteY="533dp" />


  <TextView
      android:id="@+id/textident"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="120dp"
      android:layout_marginTop="260dp"
      android:text="10119101 Andika Putra IF3"
      android:textAlignment="center"
      android:textColor="@color/black"
      android:textSize="15sp"
      android:typeface="normal"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textprfil"
      android:layout_width="377dp"
      android:layout_height="120dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="350dp"
      android:text="Merupakan Mahasiswa yang berkuliah di Universitas Komputer Indonesia, dengan Program Studi Teknik Informatika, dan merupakan Pengusaha muda yang sukses dibidang E-commerce"
      android:textAlignment="center"
      android:textColor="@color/MainText"
      android:textSize="15sp"
      android:typeface="normal"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <androidx.constraintlayout.utils.widget.ImageFilterButton
      android:id="@+id/imageFilterButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_action_back" />

  <androidx.constraintlayout.utils.widget.ImageFilterButton
      android:id="@+id/imageFilterButton2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="368dp"
      android:layout_marginTop="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_action_setting" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="170dp"
      android:layout_marginTop="50dp"
      android:layout_marginRight="20dp"
      android:text="My Profile"
      android:textSize="19dp"
      android:typeface="serif" />


  //tanggal pengerjaan, Nim, Nama, Kelas
  //22-02-2022, 10119101, Andika Putra, IF3

</RelativeLayout>